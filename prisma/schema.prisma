generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Devices {
  mac_address String @id
  name        String
}

model Places {
  id                 String @id @default(uuid())
  name               String @unique
  width              Float
  height             Float
  esp_positions      String
  propagation_factor Float
  one_meter_rssi     Float
}

model Readings {
  id                 Int      @id @default(autoincrement())
  esp32              String
  place_name         String
  rssi               Int
  read_at            DateTime
  devicesMac_address String
}

model Historic {
  id                 Int      @id @default(autoincrement())
  x                  Float
  y                  Float
  place_name         String
  tracked_at         DateTime
  calculation_inputs String
  devicesMac_address String
}
